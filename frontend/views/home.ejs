<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            background-color: #1a1a1a;
            color: white;
            font-family: Arial, sans-serif;
        }
        
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100%;
            width: 60px;
            background-color: #2a2a2a;
            padding: 20px 0;
        }

        .project-container {
            margin-left: 80px;
            padding: 20px;
        }

        .project-card {
            background-color: #3a3a3a;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .meeting-cards {
            display: flex;
            gap: 20px;
        }

        .meeting-card {
            background-color: #2a2a2a;
            border-radius: 8px;
            padding: 15px;
            width: 200px;
        }

        .search-bar {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 8px;
            border-radius: 4px;
            background-color: #2a2a2a;
            border: none;
            color: white;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <!-- Add your sidebar icons here -->
    </div>

    <input type="search" class="search-bar" placeholder="Search">

    <div class="project-container">
        <% projects.forEach(project => { %>
            <div class="project-card">
                <h2><%= project.name %></h2>
                <div class="meeting-cards">
                    <% project.meetings.forEach(meeting => { %>
                        <div class="meeting-card">
                            <h3><%= meeting.title %></h3>
                            <p>Last Accessed: <%= meeting.lastAccessed %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html> 